<div class="modal-header">
	<h3 class="modal-title" id="modal-title">actions</h3>
</div>
<div class="modal-body" id="modal-body">
	<div>
		<h3>Selected Actions</h3>
		<div class="selected-actions-wrapper">
			<img class="board-1" ng-src="~/Content/Images/Boards/{{playerColor}}1.png" />
			<img class="board-2" ng-src="~/Content/Images/Boards/{{playerColor}}2.png" />
			<a href="#" ng-repeat="selectedAction in selectedActions" class="selected-action-wrapper selected-action-wrapper-{{$index}}" ng-class="{'cursor': $parent.cursor === $index}" ng-click="moveCursor($index)">
				<img ng-if="selectedAction.description != null" class="action-selected-image" ng-src="~/Content/Images/Actions/{{selectedAction.description}}.png" />
			</a>
		</div>
	</div>
	<div>
		Keyboard action entry: <input ng-model="newActionHotkey" ng-model-options="{ getterSetter: true }" data-ng-trim="false"/>
	</div>
	<div class="action-choosable-wrapper" ng-repeat="action in allActions">
		<a href="#" ng-click="addActionAtCursor(action)">
			<img ng-if="action.description != null" class="action-choosable-image" ng-src="~/Content/Images/Actions/{{action.description}}.png"/>
			<i ng-if="action.description == null" class="fa fa-ban action-choosable-image-icon"></i>
		</a>
		<p class="action-choosable-key">{{action.displayText}}</p>
	</div>
</div>
<div class="modal-footer">
	<button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
	<button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
</div>
